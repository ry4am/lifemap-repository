// prisma/appointments.schema.prisma
// Appointments database (separate Neon DB)

datasource db {
  provider = "postgresql"
  // Neon connection string for lifemap-appointments
  url      = env("DATABASE_URL_APPOINTMENTS")
}

generator client {
  provider = "prisma-client-js"
  // Generate a separate client into prisma/generated/appointments
  output   = "./generated/appointments"
}

model Appointment {
  id          String   @id @default(cuid())
  userId      String   // matches User.id in the accounts DB (no foreign key across DBs)
  title       String
  description String?
  location    String?
  startTime   DateTime
  endTime     DateTime
  status      String   @default("scheduled") // scheduled / completed / cancelled
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
